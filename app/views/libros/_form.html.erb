<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <div class="card mt-5">



     <div class="card-header font-weight-bold" style="text-align: center"><%= title %></div>
    
   <%= form_for @libro do |f| %>
 <div class="card-body">
<% if @libro.errors.any? %>
  <div id="card border-0">
    <p>This form contains <%= pluralize(@libro.errors.count, "error") %>:</p>
    <ul>
    <% @libro.errors.full_messages.each do |msg| %>
      <li class="text-danger"><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="form-group">
     <%= f.label :titulo %> 
      <%= f.text_field :titulo, class: "form-control", autofocus: true %> 
    </div>
    <div class="form-control">
      <%= f.label :image_url %>
      <%= f.file_field :image_url %>
    </div>

    <div class="form-group">
      <%= f.label :precio %>
        <%= f.text_field :precio, class: "form-control" %> 
        </div>
        <div class="form-group">
      <%= f.label "Autor" %>
        <%= f.select(:autor_id, Autor.all.collect{|a| [a.nombre, a.id]}, {prompt: "Seleccione autor"}, {class: 'form-control'}) %>
        </div>
        <div class="form-group">
       <%= f.label :descripcion %>
          <%= f.text_area :descripcion, rows: 4, class: "form-control" %>
          </div>
          <div class="form-group">
      <%= f.label :fecha_publicacion %> 
        <%= f.date_field :fecha_publicacion, class: "form-control" %> 
      </div>
      </div>

        <div class="card-footer text-right">
          <%= link_to "Cancel", libros_path, class: "btn btn-danger" %>
          <%= f.submit "Save" , class: "btn btn-primary" %>
        </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
